<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id= "@+id/card_view"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_margin="10dp"
        android:elevation="8dp"
    card_view:cardBackgroundColor="@color/colorWhite"
        card_view:cardCornerRadius="@dimen/card_album_radius"
        android:minHeight="200dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_image_height"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/rounded_imageview"
                android:foreground="@drawable/news1"
                android:clickable="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_thumbnail"
                android:paddingLeft="@dimen/item_title_padding"
                android:paddingRight="@dimen/item_title_padding"
                android:text="Product Title"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24dp" />


            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:paddingBottom="@dimen/item_summary_padding_bottom"
                android:paddingLeft="@dimen/item_title_padding"
                android:paddingRight="@dimen/item_title_padding"
                android:text="â‚¹2499"
                android:textColor="@color/colorPrimary"
                android:textSize="12dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>